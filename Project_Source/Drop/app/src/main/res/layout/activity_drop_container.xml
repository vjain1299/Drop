<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DropContainer" android:orientation="vertical">

    <TextView
            android:text="@string/droptitle"
            android:layout_width="match_parent"
            android:layout_height="55dp" android:id="@+id/TitleBox" android:layout_marginTop="64dp"
            android:textSize="24sp" android:textStyle="bold"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
    <TextView
            android:text="@string/dropcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/DropBox"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin" android:textIsSelectable="false"
            android:textSize="18sp"/>
</LinearLayout>